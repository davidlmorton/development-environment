#! /bin/bash

echo "$1"
if [ -z "$1" ]; then
    TARGET="default"
else
    TARGET=$1
fi

echo "Deploying to $TARGET"
mkdir -p $HOME/deployments/$TARGET

rsync -av /home/archive/dmorton/genome $HOME/deployments/$TARGET --exclude "*.swp" --exclude 'genome/.git/modules/vendor/*' --exclude 'genome/vendor/*' --delete --delete-excluded
