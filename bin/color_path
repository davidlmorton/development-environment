#! /usr/bin/env perl
#
#This script just takes in a path (string) and prints it with ANSI
#colorings

require Term::ANSIColor;

my ($path) = @ARGV;
$path =~ m/(.*deployments\/*)(\/[^\/]*\/*)(.*)/;
my $before = $1 || $path;
my $thing = $2 || '';
my $after = $3 || '';

printf "%s%s%s", Term::ANSIColor::colored($before, 'blue'),
                 Term::ANSIColor::colored($thing, 'red'),
                 Term::ANSIColor::colored($after, 'blue');
